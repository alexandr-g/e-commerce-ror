<h1>Products#new - Add Product</h1>
<p>Find me in app/views/products/new.html.erb</p>

<%= form_for(@product) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create new product", class: "btn btn-large btn-primary" %>
  </p>
<% end %>
