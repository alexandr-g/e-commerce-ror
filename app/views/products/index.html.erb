<h1>List of all products</h1>
<div class="container-fluid">

  <table class="table table-bordered">
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Action</th>
    </tr>

    <% @product.each do |products| %>
      <tr>
        <td><%= products.name %></td>
        <td><%= products.price %></td>
        <td><%= products.description %></td>
        <td>
          <%= link_to 'Show', product_path(products) %>
          <%= link_to 'Edit', edit_product_path(products) %>
          <%= link_to 'Delete', product_path(products),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= link_to 'Add new product', new_product_path, class: 'btn btn-primary' %><br>

</div>
